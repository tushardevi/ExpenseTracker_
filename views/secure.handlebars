
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
    <link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="main.js"></script>
	</head>
	<body>
    
		<header>
		<h1>My Expenses</h1>
		<a href="/logout">Log out</a> 
		</header>
    
    
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		
     
<div id="main">
  
<table class="timecard">
  
	<caption>Your expenses</caption>
	<thead>
		<tr>
			<th id="thDay">Date</th>
			<th id="thRegular">label</th>
			<th id="thOvertime">amount</th>
			
		</tr>
	</thead>
  
	<tbody>
      {{#each records}}
    
		<tr class="odd">
			<td>{{this.expense_date}}</td>
			<td><a href="/secure/add-expenses">{{this.label}}</td>
			<td>{{this.amount}}</td>
		</tr>
       {{/each}}
    
	</tbody>
	
</table>
</div>

      
    
