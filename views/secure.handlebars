	<body>
    
		<header>
		<h1>My Expenses</h1>
    <a href="secure/add-expenses">Add expense</a> 
    <a href="/logout">Log out</a>  
		</header>
    
    
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		
     
<div id="main">
  
<table class="timecard">
  
	<caption>Expenses</caption>
	<thead>
		<tr>
			<th id="thDay">Date</th>
			<th id="thRegular">Label</th>
      <th id="category">Category</th>
      <th id="descrip">Description</th>
      <th id="acmount">Amount</th>
      <th id="receipt">Receipt</th>
<!-- 			<th id="thOvertime">Picture</th> -->
      
			
		</tr>
	</thead>
  
	<tbody>
      {{#each records}}
    
		<tr class="odd">
			<td>{{this.expense_date}}</td>
			<td><a href="/secure/add-expenses"/>{{this.label}}</td>
			<td>{{this.category}}</td>
      <td>{{this.descrip}}</td>
      <td>{{this.amount}}</td>
      
      <td><a class="lightbox" href="#{{this.filename}}">
     <img src="avatars/{{this.filename}}"/>
      </a> 
      
    <div class="lightbox-target" id="{{this.filename}}">
     <img src = "avatars/{{this.filename}}"/>
     <a class="lightbox-close" href="#"></a>
      </div>
		</tr>
       {{/each}}
    
	</tbody>
  
	
</table>
</div>
    
    
   
    
	</body>
</html>
