<body>
  
 
   <header>
    <div class="overlay">
      <h1>Create Account</h1>
      <a href="/">Home</a>
    <br>
      </div>
  </header>
    
  
  
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
  

  
  <main>
    
            <form class = "formCenter" form action= "/register" method = "post"  enctype = "multipart/form-data">
                    <input class = "tbox" type="text" name = "firstName" value = "" placeholder = "First Name">
                    <input class = "tbox" type="text" name = "lastName" value = "" placeholder = "Last Name">
                    <input class = "tbox" type="text" name = "username" value = "" placeholder = "Username">
                    <input class = "tbox" type="email" name="email" value = "" placeholder = "E-mail" >
                    <input class = "tbox" type="password" name = "password" value = "" placeholder = "Password">
                    <input class = "tbox" type="file" name="avatar" accept="image/*">
                    <input class = "button" type="submit" value="Add">
               
              
              
            </form>
          
          
     
 
    
    
</main>
